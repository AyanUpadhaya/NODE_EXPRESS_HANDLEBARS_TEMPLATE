<div class="container py-3">
  <div class="row">
    {{#each posts}}
      <div class="col-md-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column justify-space-between gap-2">
            <div>
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{content}}</p>
            </div>
            <button class="btn btn-primary mt-auto">{{author}}</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>